{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EKS_ClusterPermissions",
            "Effect": "Allow",
            "Action": [
                "eks:ListUpdates",
                "eks:DescribeUpdate",
                "eks:DescribeCluster",
                "eks:UpdateClusterVersion",
                "eks:UpdateClusterConfig",
                "eks:DeleteCluster",
                "eks:CreateFargateProfile",
                "eks:ListFargateProfiles",
                "eks:TagResource",
                "eks:ListTagsForResource",
                "eks:UntagResource"
            ],
            "Resource": [
                "arn:aws:eks:<region>:<account_id>:cluster/promethium*"
            ]
        },
        {
            "Sid": "EKS_NodeGroupPermissions",
            "Effect": "Allow",
            "Action": [
                "eks:ListUpdates",
                "eks:DescribeUpdate",
                "eks:TagResource",
                "eks:ListTagsForResource",
                "eks:UntagResource",
                "eks:UpdateNodegroupVersion",
                "eks:UpdateNodegroupConfig",
                "eks:DescribeNodegroup",
                "eks:DeleteNodegroup",
                "eks-auth:AssumeRoleForPodIdentity"
            ],
            "Resource": [
                "arn:aws:eks:<region>:<account_id>:nodegroup/promethium*/*/*"
            ]
        },
        {
            "Sid": "EKS_CreateCluster",
            "Effect": "Allow",
            "Action": [
                "eks:ListClusters",
                "eks:CreateCluster"
            ],
            "Resource": "arn:aws:eks:<region>:<account_id>:cluster/*"
        }
    ]
}