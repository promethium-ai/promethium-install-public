{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "IAMWildcardPermissions",
            "Effect": "Allow",
            "Action": [
                "iam:ListRoles",
                "iam:ListUsers",
                "iam:ListGroups",
                "iam:ListPolicies",
                "iam:ListInstanceProfiles",
                "iam:ListRolePolicies",
                "iam:ListUserPolicies",
                "iam:ListAttachedRolePolicies",
                "iam:ListAttachedUserPolicies",
                "iam:ListAttachedGroupPolicies",
                "iam:GetAccountSummary",
                "iam:GetAccountPasswordPolicy",
                "iam:GetAccountAuthorizationDetails",
                "iam:GenerateCredentialReport",
                "iam:GetCredentialReport",
                "iam:GetPolicy",
                "iam:GetPolicyVersion",
                "iam:GetRole",
                "iam:GetRolePolicy",
                "iam:GetUser",
                "iam:GetGroup",
                "iam:GetInstanceProfile",
                "iam:GetServiceLinkedRoleDeletionStatus",
                "iam:GetContextKeysForCustomPolicy",
                "iam:GetContextKeysForPrincipalPolicy",
                "iam:ListPolicyVersions",
                "iam:ListInstanceProfilesForRole",
                "iam:CreatePolicy"
            ],
            "Resource": "*"
        },
        {
            "Sid": "IAM_UserScopedPermissions",
            "Effect": "Allow",
            "Action": [
                "iam:CreateUser",
                "iam:AttachUserPolicy",
                "iam:DetachUserPolicy",
                "iam:PutUserPolicy",
                "iam:UpdateUser",
                "iam:DeleteUser",
                "iam:DetachUserPolicy",
                "iam:DeleteUserPolicy"
            ],
            "Resource": [
                "arn:aws:iam::<account_id>:user/promethium-*"
            ]
        },
        {
            "Sid": "IAM_RoleScopedPermissions",
            "Effect": "Allow",
            "Action": [
                "iam:CreateRole",
                "iam:AttachRolePolicy",
                "iam:PutRolePolicy",
                "iam:UpdateRole",
                "iam:PassRole",
                "iam:TagRole",
                "iam:UpdateAssumeRolePolicy",
                "iam:DeleteRole",
                "iam:DetachRolePolicy",
                "iam:DeleteRolePolicy",
                "iam:UntagRole"
            ],
            "Resource": [
                "arn:aws:iam::<account_id>:role/promethium-*"
            ]
        },
        {
            "Sid": "IAM_PolicyScopedPermissions",
            "Effect": "Allow",
            "Action": [
                "iam:CreatePolicyVersion",
                "iam:CreatePolicy",
                "iam:TagPolicy",
                "iam:DeletePolicy",
                "iam:DeletePolicyVersion"
            ],
            "Resource": [
                "arn:aws:iam::<account_id>:policy/promethium-*",
                "arn:aws:iam::<account_id>:policy/*kms*"
            ]
        },
        {
            "Sid": "IAM_KmsPolicyScopedPermissions",
            "Effect": "Allow",
            "Action": [
                "iam:CreatePolicy",
                "iam:DeletePolicy",
                "iam:DeletePolicyVersion"
            ],
            "Resource": [
                "arn:aws:iam::<account_id>:policy/*KMS*"
            ]
        },
        {
            "Sid": "IAM_GroupScopedPermissions",
            "Effect": "Allow",
            "Action": [
                "iam:CreateGroup",
                "iam:AttachGroupPolicy",
                "iam:PutGroupPolicy",
                "iam:UpdateGroup",
                "iam:AddUserToGroup",
                "iam:DeleteGroup",
                "iam:DetachGroupPolicy",
                "iam:RemoveUserFromGroup",
                "iam:DeleteGroupPolicy"
            ],
            "Resource": [
                "arn:aws:iam::<account_id>:group/promethium-*"
            ]
        },
        {
            "Sid": "IAM_InstanceProfileScopedPermissions",
            "Effect": "Allow",
            "Action": [
                "iam:CreateInstanceProfile",
                "iam:TagInstanceProfile",
                "iam:AddRoleToInstanceProfile",
                "iam:RemoveRoleFromInstanceProfile",
                "iam:DeleteInstanceProfile"
            ],
            "Resource": [
                "arn:aws:iam::<account_id>:instance-profile/promethium*"
            ]
        },
        {
            "Sid": "IAM_OidcScopedPermissions",
            "Effect": "Allow",
            "Action": [
                "iam:CreateOpenIDConnectProvider",
                "iam:TagOpenIDConnectProvider",
                "iam:GetOpenIDConnectProvider",
                "iam:DeleteOpenIDConnectProvider"
            ],
            "Resource": [
                "arn:aws:iam::<account_id>:oidc-provider/oidc.eks.*.amazonaws.com/id/*"
            ]
        },
        {
            "Sid": "IAM_ServiceLinkedRoleEKS",
            "Effect": "Allow",
            "Action": [
                "iam:CreateServiceLinkedRole",
                "iam:DeleteServiceLinkedRole"
            ],
            "Resource": [ "arn:aws:iam::<account_id>:role/aws-service-role/eks.amazonaws.com/promethium-*" ],
            "Condition": { "StringEquals": { "iam:AWSServiceName": [ "eks.amazonaws.com"] } }
        },
        {
            "Sid": "IAM_ServiceLinkedRoleGlue",
            "Effect": "Allow",
            "Action": [
                "iam:CreateServiceLinkedRole",
                "iam:DeleteServiceLinkedRole"
            ],
            "Resource": [ "arn:aws:iam::<account_id>:role/aws-service-role/glue.amazonaws.com/promethium-*" ],
            "Condition": { "StringEquals": { "iam:AWSServiceName": [ "glue.amazonaws.com" ] } }
        },
        {
            "Sid": "IAM_ServiceLinkedRoleEKSNodeGroup",
            "Effect": "Allow",
            "Action": [
                "iam:CreateServiceLinkedRole",
                "iam:DeleteServiceLinkedRole"
            ],
            "Resource": [ "arn:aws:iam::<account_id>:role/aws-service-role/eks-nodegroup.amazonaws.com/promethium-*" ],
            "Condition": { "StringEquals": { "iam:AWSServiceName": ["eks-nodegroup.amazonaws.com" ] } }
        },
        {
            "Sid": "IAM_ServiceLinkedRoleEKSAddOns",
            "Effect": "Allow",
            "Action": [
                "iam:CreateServiceLinkedRole",
                "iam:DeleteServiceLinkedRole"
            ],
            "Resource": [ "arn:aws:iam::<account_id>:role/aws-service-role/eks-addons.amazonaws.com/promethium-*" ],
            "Condition": { "StringEquals": { "iam:AWSServiceName": ["eks-addons.amazonaws.com" ] } }
        }
    ]
}
